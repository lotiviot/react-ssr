{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "components/*": [
                "src/components/*"
            ],
            "hocs/*": [
                "src/hocs/*"
            ],
            "services/*": [
                "src/services/*"
            ],
            "utils/*": [
                "src/utils/*"
            ]
        },
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react"
    }
}